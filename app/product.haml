      .product-images
        .product-images-for
          - 4.times do |x|
            %img{ src: "/assets/img/shop/products/product#{x+1}.png" }
        .product-images-nav
          - 4.times do |x|
            %img{ src: "/assets/img/shop/products/product#{x+1}.png" }
