%section#slider-shop-fullwidth.rev_slider.fullwidth-shop-slider.no-padding{style: "max-height:400px; max-width: 100%;height:100%;"}
  %ul
    - @banners.each do |banner|
      %li{"data-transition" => "slotfade-horizontal"}
        %img{alt: "Slide", "data-bgfit" => "cover", "data-bgrepeat" => "no-repeat", src: banner.image.url}
        .tp-caption.tp-resizeme.tp-shape.tp-shapewrapper{"data-basealign" => "slide", "data-height" => "400", "data-start" => "500", "data-transform_idle" => "o:1", "data-transform_in" => "o:0;s:1500;e:Power3.easeInOut;", "data-transform_out" => "o:0;s:1500;e:Power3.easeInOut;", "data-width" => "600", "data-x" => "center", "data-y" => "center"}
        / .tp-caption.tp-resizeme{"data-hoffset" => "0", "data-start" => "1000", "data-transform_idle" => "o:1;", "data-transform_in" => "o:0;y:50;s:1500;", "data-transform_out" => "o:0;s:1500;e:Power3.easeInOut;", "data-voffset" => "-75", "data-x" => "center", "data-y" => "center"}
        /   %h2#titulo2.heading= banner.title
        / .tp-caption.tp-resizeme{"data-hoffset" => "0", "data-start" => "1500", "data-transform_idle" => "o:1;", "data-transform_in" => "o:0;y:50;s:1500;", "data-transform_out" => "o:0;s:1500;e:Power3.easeInOut;", "data-voffset" => "0", "data-x" => "center", "data-y" => "center"}
        /   %p.lead= banner.subtitle
        - if banner.cta
          .tp-caption.tp-resizeme.rs-parallaxlevel-1{"data-hoffset" => "0", "data-start" => "1000", "data-transform_idle" => "o:1;", "data-transform_in" => "o:0;y:50;s:1500;", "data-transform_out" => "o:0;s:1500;e:Power3.easeInOut;", "data-voffset" => "65", "data-x" => "center", "data-y" => "center"}
            %a.btn.btn-primary.btn-lg{href: banner.link}
              = banner.cta_text
              %i.icofont-rounded-right{"aria-hidden" => "true"}
.container.catalogue-container
  .catalogue-items
    .row
      - @categories.each do |category|
        .col-lg-4
          .card-catalogue
            .card-catalogue-img
              = link_to category.children? ? app_category_path(category) : app_products_path(category) do
                %img{ src: category.image.url }
            .card-catalogue-content
              %h2.card-catalogue-title= category.name
  %center
