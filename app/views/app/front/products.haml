.wrapper
  .container.category-container
    .category-header
      %nav{ "aria-label" => "breadcrumb"}
        %ol.breadcrumb
          - @category&.ancestors.each_with_index do |category, i|
            %li.breadcrumb-item
              = link_to i.zero? ? app_category_path(category) : app_subcategory_path(category) do
                = category.name
          %li.breadcrumb-item
            - if @category.root? && @category.children?
              = link_to @category.name, app_category_path(category)
            - elsif @category.children?
              = link_to @category.name, app_subcategory_path(category)
            - else
              = link_to @category.name, app_products_path(@category)
      = simple_form_for @category, url: app_products_path(@category), method: :get do
        .input-group
          %input.form-control{placeholder: "Buscar...", type: "text", name: 'q'}
          .input-group-append
            %button.btn.btn-primary{type: "submit"}
              %i.icofont-search
        %small Ejemplo: graduaci√≥n, boda, dije, etc.
    .category-box
      .category-items.w-100
        .row
          - @products.each do |product|
            .col-lg-4.col-sm-6.col-xs-12
              .card-catalogue
                .card-catalogue-img
                  = link_to app_product_path(@category, product) do
                    = image_tag product.images[0].url
                .card-catalogue-content
                  %h2.card-catalogue-title= product.name
                  = link_to app_product_path(@category, product), class: 'btn btn-custom' do
                    - if product&.price.present?
                      Comprar
                    - else
                      Cotizar
        %center
          = paginate @products
