.container.category-container
  .category-header
    %nav{ "aria-label" => "breadcrumb"}
      %ol.breadcrumb
        - @subcategory.ancestors.each_with_index do |category, i|
          %li.breadcrumb-item
            = link_to i.zero? ? app_category_path(category) : app_subcategory_path(category) do
              = category.name
        %li.breadcrumb-item.active{ "aria-current" =>"page" }
          = @subcategory.name
    = simple_form_for @category, url: app_subcategory_path(@subcategory), method: :get do
      .input-group
        %input.form-control{placeholder: "Buscar...", type: "text", name: 'q'}
        .input-group-append
          %button.btn.btn-primary{type: "submit"}
            %i.icofont-search
      %small Ejemplo: graduaci√≥n, boda, dije, etc.
  .category-box
    = render 'app/partials/sidebar'
    .category-items
      %img.banner-category{ src: @subcategory.banner.url }
      .row
        - @subcategories.each do |category|
          .col-lg-4
            .card-subcategory
              = link_to category.children? ? app_subcategory_path(category) : app_products_path(category) do
                %img{ src: category.image.url }
                %h2.card-subcategory-title= category.name
