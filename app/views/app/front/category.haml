.container.category-container
  .category-header
    %h1 Anillos de Graduación
    %form
      .input-group
        %input.form-control{placeholder: "Buscar...", type: "text"}
        .input-group-append
          %button.btn.btn-primary{type: "button"}
            %i.icofont-search
      %small Ejemplo: graduación, boda, dije, etc.
  .category-box
    = render 'app/partials/sidebar'
    .category-items
      %img.banner-category{ src: '/assets/app/diamanteazul/banner.jpg' }
      .row
        - 3.times do
          .col-lg-4
            .card-subcategory
              %a{ href: '/subcategory' }
                %img{ src: '/assets/app/diamanteazul/shop/products/category01-01.png' }
                %h2.card-subcategory-title Clásicos
