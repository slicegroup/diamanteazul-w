= Haml::Engine.new(File.read("app/partials/_head.haml")).render()
= Haml::Engine.new(File.read("app/partials/_navbar.haml")).render()

%body
  .container.category-container
    .category-header
      %nav{ "aria-label" => "breadcrumb"}
        %ol.breadcrumb
          %li.breadcrumb-item
            %a{ href: 'category.html'} Anillos de Graduación
          %li.breadcrumb-item.active{ "aria-current" =>"page" }
            %a{ href: 'subcategory.html'} Clásicos
      %form
        .input-group
          %input.form-control{placeholder: "Buscar...", type: "text"}
          .input-group-append
            %button.btn.btn-primary{type: "button"}
              %i.icofont-search
        %small Ejemplo: graduación, boda, dije, etc.
    .category-box
      = Haml::Engine.new(File.read("app/partials/_sidebar.haml")).render()
      .category-items
        %img.banner-category{ src: '/assets/img/banner.jpg' }
        .row
          - 3.times do
            .col-lg-4
              .card-subcategory
                %a{ href: '/products.html' }
                  %img{ src: '/assets/img/shop/products/category01-01-01.png' }
                  %h2.card-subcategory-title Tradicionales
= Haml::Engine.new(File.read("app/partials/_footer.haml")).render()
= Haml::Engine.new(File.read("app/partials/_scripts.haml")).render()
