= simple_form_for [:admin, :products, @category] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_products_categories_path, 'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back') do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title
            - if params[:parent]
              = "Nueva subcategoría para #{@name_parent}"
            - else
              = t('keppler.models.pluralize.categories').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    = f.input :name, as: :string
                  - if params[:parent]
                    .col-xs-12
                      %input.hidden{type: 'text', value: params[:parent], name: 'parent'}
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler.actions.save_and_add_another'), name: '_add_other'
          - if params[:parent]
            .box-body.no-padding
              %table.table
                %thead
                  %tr
                    %th.not-records.center
                      %h3.box-title= "Subcategorías de #{@name_parent}"
                  %tr
                    %th= t('activerecord.attributes.name')
                    %th{ style: 'width: 33%'}
                      %a{ href: new_admin_products_category_path(parent: object.id)}
                        %button.btn.btn-primary +
                    %th{ style: 'width: 33%'}
                      %a{ href: new_admin_products_category_path(parent: object.id)}
                        %button.btn.btn-primary +
:scss
  .hidden{
    display: none;
  }
